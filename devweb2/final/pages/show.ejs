<html>
    <%- include('partials/header.ejs') %>
        <section class="noticia-destaque">
            <div class="center">   
                <div class="img-destaque">
                    <div class="overlay-destaque"></div>
                        <div class="title-destaque-descricao">
                            <h2><%= posts[0].titulo %></h2>
                            <p><%-  posts[0].conteudo %></p>
                        </div>
                        <img src="<%- posts[0].imagem %>" alt="">
                </div>
            </div>
        </section>


        <section class="outras-noticias">
            <div class="title-outras-noticia">
                <h2>Últimas Notícias</h2>
                <br><br>
                <div class="center">
                    <div class="ultimas">
                    <% for (let i = 1; i < posts.length; i++) { %> 
                        <div class="box-ultima-single">
                            <img src=" <%- posts[i].imagem %>" />
                            <div class="conteudo-noticia-single">
                            <h3><%= posts[i].titulo %></h3>
                            <h2>Proxima rodada</h2>
                            <p> <%= posts[i].conteudo %></p>
                            <a href="/encarar-o-surf">Saiba mais</a>
                        </div>
                        </div>
                    <% } %>
                    </div>

                    <div class="mais-lidas">
                        <h3>Mais Lidas</h3>
                        <div class="mais-lidas-noticias">
                            <div class="mais-lida-noticia-single">
                                <img src="/public/images/imagem1.jpg" />
                                <div class="texto-mais-lida-single">
                                    <h3>Brasileirao</h3>
                                    
                                    <p>Brasileirão tem disputado eletrizante pelo titulo</p>
                                </div>
                            </div>                        
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('partials/footer.ejs') %>
    </body>
</html>